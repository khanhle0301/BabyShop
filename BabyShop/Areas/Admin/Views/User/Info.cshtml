@model Model.EF.User
@using BabyShop.Common;
@using Model.Dao;
@{
    var dao = new UserDao();
    var session = (AdminLogin)Session[BabyShop.Common.Constants.ADMIN_SESSION];
    var entity = dao.GetByID(session.UserName);
    var res = dao.ViewDetail(session.UserID);  
    ViewBag.Title = "Thông tin người dùng " + res.UserName;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
   Thông tin người dùng
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thông tin người dùng.
            </div>
            <div class="panel-body">
                <div class="row">
                    <dl class="dl-horizontal">                      
                        <dt>
                           Tài khoản
                        </dt>

                        <dd>
                           @res.UserName
                        </dd>

                        <dt>
                          Tên
                        </dt>

                        <dd>
                            @res.Name
                        </dd>

                        <dt>
                            Địa chỉ
                        </dt>

                        <dd>
                            @res.Address
                        </dd>

                        <dt>
                           Email
                        </dt>

                        <dd>
                            @res.Email
                        </dd>

                        <dt>
                            Điện thoại
                        </dt>

                        <dd>
                            @res.Phone
                        </dd>
                      
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Sửa", "EditInfo") |
    @Html.ActionLink("Đổi mật khẩu", "ChangePass") |
    <a href="@Url.Action("Index", "Home")">Back</a> 
</p>
