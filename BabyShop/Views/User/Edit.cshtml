@model Model.ViewModel.UserEditModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section category{
    @{Html.RenderAction("Category", "Home");}
}

@if (ViewData["SuccessMsg"] != null)
{
    <div class="single_top">
        <div class="single_grid">
            <div class="alert alert-success" role="alert">
                <strong>Chúc mừng bạn! </strong> đã cập nhật thông tin thành công.
                <br />Click <a href="/">vào đây </a>để về trang chủ.
            </div>
        </div>
    </div>
}
else
{
    <div class="register">
        @using (Html.BeginForm("Edit", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken();
            @Html.HiddenFor(model => model.ID)
            @Html.ValidationSummary(false, "", new { @class = "error" })
            <div class="register-top-grid">
                <h3>Cập nhật thông tin</h3>
                <div class="mation">
                    <span>Họ tên<label>*</label></span>
                    @Html.TextBoxFor(model => model.Name)

                    <span>Email<label>*</label></span>
                    @Html.TextBoxFor(model => model.Email)

                    <span>Địa chỉ<label>*</label></span>
                    @Html.TextBoxFor(model => model.Address)

                    <span>Số điện thoại<label>*</label></span>
                    @Html.TextBoxFor(model => model.Phone)
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
            <div class="register-but">
                <form>
                    <input type="submit" value="Cập nhật">
                    <div class="clearfix"> </div>
                </form>
            </div>
        }
    </div>
}