@model BabyShop.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="account_grid">
    <div class="login-right">
        <h3>Đăng nhập</h3>
        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
            @Html.ValidationSummary(false, null, new { @class = "text-danger" })
            <div>
                <span>Tài khoản<label>*</label></span>
                @Html.TextBoxFor(model => model.UserName)
            </div>
            <div>
                <span>Password<label>*</label></span>
                @Html.PasswordFor(model => model.Password)
            </div>
            <a class="forgot" href="#">Bạn quên mật khẩu?</a>
            <input type="submit" value="Đăng nhập">
        }
    </div>
    <div class="login-left">
        <h3>Chưa có tài khoản</h3>
        <p>Nếu bạn chưa có tài khoản vui lòng đăng ký tại link dưới đây:</p>
        <a class="acount-btn" href="/dang-ky">Đăng ký thành viên</a>
    </div>
    <div class="clearfix"> </div>
</div>