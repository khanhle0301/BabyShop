@model BabyShop.Models.ChangepassUser
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section category{
    @{Html.RenderAction("Category", "Home");}
}

@if (ViewData["SuccessMsg"] != null)
{
    <div class="single_top">
        <div class="single_grid">
            <div class="alert alert-success" role="alert">
                <strong>Chúc mừng bạn! </strong> đã đổi mật khẩu thành công.
                <br />Click <a href="/">vào đây </a>để về trang chủ.
            </div>
        </div>
    </div>
}
else
{
    <div class="register">
        @using (Html.BeginForm("Changepass", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken();          
            @Html.ValidationSummary(false, "", new { @class = "error" })
            <div class="register-top-grid">
                <h3>Cập nhật thông tin</h3>
                <div class="mation">
                    <span>Mật khẩu<label>*</label></span>
                    @Html.PasswordFor(model => model.Password)

                    <span>Nhập lại mật khẩu<label>*</label></span>
                    @Html.PasswordFor(model => model.ConfirmPassword)
                 
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
            <div class="register-but">
                <form>
                    <input type="submit" value="Đổi mật khẩu">
                    <div class="clearfix"> </div>
                </form>
            </div>
        }
    </div>
}